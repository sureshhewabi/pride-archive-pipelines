            <groupId>uk.ac.ebi.pride.archive</groupId>
            <artifactId>archive-repo</artifactId>
            <version>${uk.ac.ebi.pride.archive.repo.version}</version>
        </dependency>

        <!-- Archive integration library -->
        <dependency>
            <groupId>uk.ac.ebi.pride.archive</groupId>
