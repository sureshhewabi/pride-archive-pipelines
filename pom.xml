            </exclusions>
        </dependency>

        <dependency>
            <groupId>de.mpc.pia</groupId>
            <artifactId>pia</artifactId>
            <version>${pia.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>log4j</groupId>
